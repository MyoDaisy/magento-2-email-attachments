<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="email_order_set_template_vars_before">
        <observer name="mageplaza_emailattachments_order_observer" instance="Mageplaza\EmailAttachments\Observer\AbstractEmail"/>
    </event>
    <event name="email_invoice_set_template_vars_before">
        <observer name="mageplaza_emailattachments_invoice_observer" instance="Mageplaza\EmailAttachments\Observer\AbstractEmail"/>
    </event>
    <event name="email_shipment_set_template_vars_before">
        <observer name="mageplaza_emailattachments_shipment_observer" instance="Mageplaza\EmailAttachments\Observer\AbstractEmail"/>
    </event>
    <event name="email_creditmemo_set_template_vars_before">
        <observer name="mageplaza_emailattachments_creditmemo_observer" instance="Mageplaza\EmailAttachments\Observer\AbstractEmail"/>
    </event>

    <event name="mageplaza_emailattachments_order">
        <observer name="mageplaza_emailattachments_order_observer" instance="Mageplaza\EmailAttachments\Observer\OrderObserver"/>
    </event>
    <event name="mageplaza_emailattachments_invoice">
        <observer name="mageplaza_emailattachments_invoice_observer" instance="Mageplaza\EmailAttachments\Observer\InvoiceObserver"/>
    </event>
    <event name="mageplaza_emailattachments_shipment">
        <observer name="mageplaza_emailattachments_shipment_observer" instance="Mageplaza\EmailAttachments\Observer\ShipmentObserver"/>
    </event>
    <event name="mageplaza_emailattachments_creditmemo">
        <observer name="mageplaza_emailattachments_creditmemo_observer" instance="Mageplaza\EmailAttachments\Observer\CreditmemoObserver"/>
    </event>
</config>
